{
  "name": "germin",
  "version": "1.0.9",
  "description": "Un mini framework CLI pour dévélopper des sites web statiques avec HTML, CSS, JS et une app x intégrée pour la gestion des tâches",
  "main": "src/index.js",
  "type": "commonjs",
  "bin": {
    "germin": "./bin/index.js"
  },
  "scripts": {
    "dev": "node bin/index.js",
    "test": "jest --coverage",
    "lint": "eslint src bin",
    "format": "prettier --write src bin",
    "prepublishOnly": "npm run lint"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "express": "^4.18.2",
    "figlet": "^1.7.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "eslint": "^8.57.1",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "keywords": [
    "cli",
    "web",
    "project",
    "generator",
    "static",
    "html",
    "css",
    "javascript",
    "mini framework"
  ],
  "author": "MBROUMSADJA EMMANUEL",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80
  }
}
